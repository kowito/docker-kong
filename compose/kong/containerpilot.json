{
  "consul": "consul:8500",
  "services": [
    {
      "name": "kong-80",
      "port": 80,
      "health": "/usr/bin/curl -o /dev/null -s http://localhost:80/",
      "poll": 3,
      "ttl": 10
    },
    {
      "name": "kong-8443",
      "port": 8443,
      "health": "/usr/bin/curl -o /dev/null -s https://localhost:8443/ --insecure",
      "poll": 3,
      "ttl": 10
    },
    {
      "name": "kong-8001",
      "port": 8001,
      "health": "/usr/bin/curl -o /dev/null --fail -s http://localhost:8001/status",
      "poll": 3,
      "ttl": 10
    },
    {
      "name": "kong-8444",
      "port": 8444,
      "health": "/usr/bin/curl -o /dev/null -s https://localhost:8444/ --insecure",
      "poll": 3,
      "ttl": 10
    }
  ]
}
